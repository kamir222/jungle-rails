<section>
  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to 'All Categories', [:admin, :categories], class: 'btn btn-info' %>
    <%= link_to 'Create Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default">
    <table class="table table-bordered">
      <thead>
        <th colspan="2">Category</th>
      </thead>
      <td>
        <%= render @categories %>
      </td>
    </table>
  </div>

</section>
