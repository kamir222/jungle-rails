<h1>Signup!</h1>

<div>
  <%= form_for [@user] do |f| %>

    <div>
      <%=f.label :first_name %>
    </div>
    <div class="form-group">
      <%= f.text_field :first_name %>
    </div>

    <div>
      <%=f.label :last_name %>
    </div>
    <div class="form-group">
      <%= f.text_field :last_name %>
    </div class="form-group">

    <div>
      <%=f.label :email %>
    </div>
    <div class="form-group">
      <%= f.text_field :email %>
    </div>

    <div>
      <%=f.label :password %>
    </div>
    <div class="form-group">
      <%= f.password_field :password %>
    </div>

    <div>
      <%=f.label :confirm_password %>
    </div>
    <div class="form-group">
      <%= f.password_field :password %>
    </div>

    <%= f.submit "Submit", class: 'btn btn-primary'%>

  <% end %>
</div>
